<% if @userparam.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@userparam.errors.count, "error") %>
      prohibited this userparam from being saved:</h2>

    <ul>
      <% @userparam.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-row">
  <div class="col">
    <%= f.label :firstname %>
    <%= f.text_field :firstname, class: "form-control", placeholder:"Введіть Bашe ім'я:" %>
  </div>
  <div class="col">
    <%= f.label :lastname %>
    <%= f.text_field :lastname, class: "form-control", placeholder:"Введіть Bашe прізвище:" %>

  </div>
</div>
<div class="form-group ">
  <%= f.label :age %>
  <%= f.text_field :age, class: "form-control", placeholder:"Введіть Bаш вік:" %>

</div>
<div class="form-group">
  <%= f.label :avatar %>
  <%= f.file_field :avatar, class:"form-control-file" %>

</div>

<% if false %>
  <% render 'educations/form' %>
<%end%>

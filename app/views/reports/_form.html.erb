<% if @report.errors.any? %>
 <div class="alert alert-danger" role="alert">
     <h2>У нас <%= pluralize(@report.errors.count, "error") %>(проблєми), Джоні</h2>

    <ul>
    <% @report.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<% if user_signed_in? %>
<div class="form-group">
<h3>Текст</h3>
<%= f.text_area :text, size: "60x12",  class: "form-control"%>
</div>
<div class="form-group">
<h3>Теги</h3>
<%= f.file_field :photos, multiple: true %>
</div>
<% else %>
<div class="form-group">
<h3>Email</h3>
<%= f.text_field :user_email ,  class: "form-control", placeholder:"Write your email"%>
</div>
<div class="form-group">
<h3>Text</h3>
<%= f.text_area :text, size: "60x12",  class: "form-control"%>
</div>
<div class="form-group">
<h3>Photos</h3>
<%= f.file_field :photos, multiple: true %>
</div>
<% end %>

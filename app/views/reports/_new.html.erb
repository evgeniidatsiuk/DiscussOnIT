<div class="modal fade" id="reportModal" tabindex="-1" role="dialog" aria-labelledby="reportModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="reportModalLabel">Відгук</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_for :report, url:posts_path do |f| %>
      <div class="modal-body">

        <% if !user_signed_in? %>
        <%= f.text_field :user_email ,  class: "form-control", placeholder:"Введіть ваш емейл"%>
        <% end %>
        <%= f.text_area :text, size: "60x12",  class: "form-control"%>
        <%= f.file_field :photos, multiple: true %>


      </div>
      <div class="modal-footer">
        <%= f.submit "Створити" , class:"btn btn-dark"%>
      </div>
      <% end %>
    </div>
  </div>
</div>

    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

    </head>

  <body>
        <%= render "layouts/navbar" %>
        <div class="container">
          <%= render "layouts/left-sidebar" %>
          <div class="content">
            <%= yield %>
          </div>
          <%= render "layouts/right-sidebar" %>
        </div>
  </body>
</html>

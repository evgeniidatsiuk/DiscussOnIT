    <i class="fa fa-question"></i>
    <span>Питання</span>
  <%end%>
</li>
<%if @posts %>
<li class="active">
  <%else%>
  <li>
<%end%>
  <%=link_to posts_path do %>
    <i class="fa fa-exclamation"></i>
    <span>Записи</span>
  <%end%>
</li>
<%if @categories %>
<li class="active">
  <%else%>
  <li>
<%end%>
  <%=link_to categories_path do %>
    <i class="fa fa-tags"></i>
    <span class="text">Теги</span>
  <%end%>
</li>
</ul>


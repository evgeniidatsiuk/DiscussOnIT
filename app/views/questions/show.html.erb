Коментувати
<%= form_for :comment, url:comments_path do |f| %>
	<%= render 'comments/form', f:f%>
	<%= f.hidden_field :object_id, value: @question.id%>
	<%= f.hidden_field :object_type, value: @question.class.name%>
	<%= f.submit "Create" %>
<% end %>
<% Comment.where(object: @question).each do |comment| %>
	<%=render 'comments/comment', comment:comment %>
<%end%>

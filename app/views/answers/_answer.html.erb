 <%if @question.right_answer_id == answer.id %>
<div style="background-color:green">
  <%else%>
  <div>
  <%end%>
  Користувач<%=image_tag answer.user.userparam.avatar.url, height:20%>
  <b class="align-bottom"><%= link_to answer.user.userparam.nickname, userparam_path(answer.user.userparam)%></b>
  відповів:
  <br/>
  <%=answer.text%><br/>
  <%=link_to "Правильна відповідь", right_answer_path(answer.id)%>
  <hr>
  <div style="text-align: center;">
    <button type="button" class="btn btn-default" data-toggle="collapse" data-target="#answer_comment_block_<%=answer.id%>">
      <span class="glyphicon glyphicon-plus">Коменти</span>
    </button>
  </div>
  <div id="answer_comment_block_<%=answer.id%>" class="collapse">
    <%= form_for :comment, url:comments_path do |f| %>
    <%@object=answer %><%= render 'comments/form', f:f%>
    <% end %>Коменти:<% Comment.where(object: @question).each do |comment| %><%=render 'comments/comment', comment:comment %>
    <%end%>
  </div>
</div>
<hr>

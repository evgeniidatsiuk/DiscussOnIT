
<div class="row">
  <div class="col">
    <div class="row">
      <div class="col">
        <ul class="nav">
          <span class="navbar-text font-weight-bold">
            Записи:
          </span>
        </ul>
      </div>
    </div>
    <hr>
    <% if @posts == [] %>
      <p>НЕ знайдено жодного запису</p>
    <% else %>
      <%=render @posts%>
      <!--  <%= will_paginate @posts%> --!>
    <% end %>
  </div>
  <div class="col">
    <div class="row">
      <div class="col">
        <ul class="nav">
          <span class="navbar-text font-weight-bold">
            Питання:
          </span>
        </ul>
      </div>
    </div>
    <hr>
    <% if @questions == [] %>
      <p>Не знайдено жодних питань</p>
    <% else %>
      <%=render @questions%>
      <!--  <%= will_paginate @questions%> --!>
    <% end %>
  </div>
  <div class="digg_pagination">
    <% if @posts.count> @questions.count %>
      <%= will_paginate @posts%>
    <%else%>
      <%= will_paginate @questions%>
    <%end%>
  </div>
</div>

<% if @post.errors.any? %>
 <div class="alert alert-danger" role="alert">
     <h2>У нас <%= pluralize(@post.errors.count, "error") %>(проблєми), Джоні</h2>
 
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="row post">
  <div class="col">
    <div class="row">

      <div class="col-12 col-md-6 post-count">
        <div class="row">

          <div class="col-12 post-title">
            <%= link_to post.name, post_path(post.id) %>
          </div>
          <div class="col-12 post-tags">
            <%=render "categories/tags", object:post%>
          </div>
        </div>
      </div>

      <div class="col-12 col-md-6 post-content text-second">
        <div class="row">

          <div class="col-12 col-md-9">
            <%=strip_tags(post.text)[0..120]%>...
          </div>
          <div class="col-12 col-md-3 text-second">


                Написав <%=render "userparams/user",object:post %>
                <span class="times">

                  <%=distance_of_time_in_words(post.created_at,Time.now) %> ago
                </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="row">
      <div class="col">
        <ul class="nav">
          <span class="navbar-text font-weight-bold">
            Записи:
          </span>
        </ul>
      </div>
      <div class="col">
        <ul class="nav justify-content-end">
          <li class="nav-item">
            <%=link_to "Новий запис", new_post_path, class:"btn btn-primary" %>
          </li>
        </ul>
      </div>
    </div>
    <hr>
    <% if @posts == [] %>
      <p>НЕ знайдено жодного запису</p>
    <% else %>
      <%=render @posts%>
      <%= will_paginate @posts%>
    <% end %>
  </div>
</div>

<center style="margin-top:15%;"><h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <p><%= f.text_field :login, autofocus: true, autocomplete: "login",class: "input-sign", placeholder:"Нікейм або емейл" %>
  </div>

  <div class="field">
    <p><%= f.password_field :password, autocomplete: "current-password", class: "input-sign", placeholder:"Пароль" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <p><%= f.submit "Log in", class:"btn btn-dark" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</center>

<center style="margin-top:15%;"><h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <p><%= f.email_field :email, autofocus: true, autocomplete: "email" ,  class: "input-sign", placeholder:"Введіть ваш емейл" %>
  </div>

  <div class="field">

    <p><%= f.password_field :password, autocomplete: "new-password" ,  class: "input-sign", placeholder:"Введіть ваш пароль" %>
    <br /><% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> символів мінімум)</em>
    <% end %><br />
  </div>

  <div class="field">
    <p><%= f.password_field :password_confirmation, autocomplete: "new-password" ,  class: "input-sign", placeholder:"Повторіть пароль" %>
  </div>

  <div class="actions">
    <p><%= f.submit "Sign up",class:"btn btn-dark" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</center>
